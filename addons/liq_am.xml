<?xml version="1.0" encoding="UTF-8"?>
<frames>
  <frame name="dialog S(q) calc" type="dialog">
    <!-- missing docstring ;-) -->
    <title rename="title">Calculation of the structure factor</title>
    <table>
      <tr>
	<td border="5"><label rename="lab_elements">Elements:</label></td>
	<td colspan="3" expand="True" ><text value="elements_ea" validator="valid_elements"/></td>
      </tr>
      <tr>
	<td colspan="4" align="center">
	  <radio vertical="False" onchange="on_mode_change" title="Calculation mode" rename="calc_mod"
		 value="sqcalc_mode">
	    <option id="clsc"  rename="clsc" >Classic</option>
	    <option id="mix"   rename="mix"  >By Stetsiv (mix)</option>
	    <option id="pcf"   rename="pcf"  >By Stetsiv (PCF)</option>
	    <option id="pcfi"  rename="pcfi" >By Stetsiv (PCF integrated)</option>
	    <option id="pcfir" rename="pcfir">By Stetsiv (PCF dens. opt.)</option>
	    <option id="pblk"  rename="pblk" >By Stetsiv (parabolic)</option>
	  </radio>
	</td>
      </tr>
      <tr>
	<td colspan="4" expand="True"><line/></td>
      </tr>
      <tr>
	<td border="5"><label rename="pol_range">Polynomial's range:</label></td>
	<td><spin begin="1" end="50" value="pol_spin"/></td>
	<td border="5"><label rename="at_dens">Atomic density:</label></td>
	<td><text value="rho0_ea" validator="valid_float" /></td>
      </tr>
      <tr>
	<td border="5"><label trname="sections">Sections:</label></td>
	<td><spin begin="0" end="10" value="sqcalc_optcects"/></td>
	<td><label rename="start_dens">Start dens. opt.:</label></td>
	<td><spin begin="1" end="50" value="ord_r_spin"/></td>
      </tr>
      <tr>
	<td border="5"><label rename="r_cutoff">Cutoff radius:</label></td>
	<td><text validator="valid_float" value="r_c"/></td>
	<td border="5"><label rename="samples">Samples:</label></td>
	<td><spin begin="3" end="1000" value="rc_num" /></td>
      </tr>
      <tr>
	<td border="5" colspan="2" expand="True"><button type="Cancel" /></td>
	<td border="5" align="right" colspan="2" expand="True"><button type="OK" default="True" /></td>
      </tr>
    </table>
  </frame>
</frames>
